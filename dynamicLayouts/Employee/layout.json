{
  "layoutTypes": {
    "businessObjects": {
      "kind": "operationRef",
      "serviceId": "businessObjects",
      "operations": [
        "get_Employee",
        "getall_Employee",
        "create_Employee",
        "update_contacts"
      ]
    }
  },
  "layouts": {
    "isDefault": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "formExampleLayout": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "Form Example",
      "rules": [
        "isDefault"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "email",
              "phoneNumber",
              "salary",
              "hireDate"
            ],
            "readonly": true,
            "maxColumns": 2
          },
          "usedIn": [
            "isDefault"
          ]
        }
      }
    },
    "employeeFormRuleSet": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "Employee Form RuleSet",
      "rules": [
        "getCorrectLayout"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "default",
          "description": "",
          "layout": {
            "displayProperties": [
              "id",
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "salary",
              "hireDate",
              "manager"
            ],
            "readonly": true
          },
          "usedIn": []
        },
        "employeeLayout": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate"
            ],
            "readonly": true,
            "maxColumns": 2
          },
          "usedIn": [
            "getCorrectLayout"
          ]
        },
        "managerLayout": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "managerLayout",
          "description": "",
          "layout": {
            "displayProperties": [
              "fullName",
              "phoneNumber",
              "email",
              "hireDate",
              {
                  "salary": {
                    "colspan": 2
                  }
                }
            ],
            "readonly": true,
            "maxColumns": 2
          },
          "usedIn": [
            "getCorrectLayout"
          ]
        },
        "myselfLayout": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "selfLayout",
          "description": "",
          "layout": {
            "displayProperties": [
              "phoneNumber",
              "email",
              "hireDate",
              "salary"
            ],
            "readonly": true,
            "maxColumns": 2,
            "fieldTemplateMap": {
            }
          },
          "usedIn": [
            "getCorrectLayout"
          ]
        }

      },
      "fieldTemplateMap": {
        "salary": "managerSalaryTemplate"
      }
    },
    "simpleEmployeeListRuleSet": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Simple Employee List RuleSet",
      "rules": [
        "isDefault"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "fullName",
              "email",
              "phoneNumber",
              "salary"
            ]
          },
          "usedIn": [
            "isDefault"
          ]
        }
      },
      "fieldTemplateMap": {
        "phoneNumber": "phoneTemplate",
        "email": "emailTemplate"
      }
 
    },
    "tableExampleLayout": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Table Example",
      "rules": [
        "isDefault"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "email",
              "phoneNumber",
              "salary"
            ]
          }
        }
      }
    },
    "getCorrectLayout": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "{{ $value.id === 100 ? \"myselfLayout\" : ($value.manager === 100 ? 'managerLayout' : 'employeeLayout') }}"
    },
    "contextBasedForm": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "contextBasedForm",
      "rules": [
        "ExternalProfile",
        "InernalProfile"
      ],
      "layouts": {

        "externalProfile": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "externalProfile",
          "description": "",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate"
            ],
            "readonly": true,
            "maxColumns": 2
          },
          "usedIn": [
            "ExternalProfile"
          ]
        },
        "internalProfile": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "internalProfile",
          "description": "",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate",
              "salary"
            ],
            "readonly": true,
            "maxColumns": 2
          },
          "usedIn": [
            "InernalProfile"
          ]
        }
      }
    },
    "InernalProfile": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "{{ $componentContext.profile === 'internal' ? 'internalProfile' : null }}"
    },
    "ExternalProfile": {
      "expression": "{{ $componentContext.profile === 'external' ? 'externalProfile' : null }}"
    },
    "isDefault2": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "employeeListViewLayout": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "Employee List View Layout",
      "rules": [
        "isDefault2"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {

            "displayProperties": [
              "fullName",
              "email",
              "phoneNumber"
            ],
            "templateId": "employeeListViewTemplate"
          },
          "usedIn": [
            "isDefault2"
          ]
        }
      },
      "fieldTemplateMap": {
        "email": "listViewMailTemplate",
        "fullName": "listViewNameTemplate",
        "phoneNumber": "listViewPhoneTemplate"
      }
    },
    "isDefault3": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "employeeTableDesktopMode": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Employee Table Desktop Mode",
      "rules": [
        "isDefault3"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "id",
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "salary",
              "hireDate"
            ]
          },
          "usedIn": [
            "isDefault3"
          ]
        }
      },
      "fieldTemplateMap": {
        "id": "avatarTemplate"
      }
    },
    "isDefault5": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "formTransientValueChange": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "formTransientValueChange",
      "rules": [
        "isDefault5"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              {
                "email": {
                  "readonly": true
                }
              }
            ]
          },
          "usedIn": [
            "isDefault5"
          ]
        }
      }
    },
    "isDefault4": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "employeeVirtualFieldCCA": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "employeeVirtualFieldCCA",
      "rules": [
        "isDefault4"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "employeeCard"
            ]
          },
          "usedIn": [
            "isDefault4"
          ]
        }
      },
      "fieldTemplateMap": {
        "employeeCard": "employeeCardTemplate"
      }
    },
    "employeeCalculatedField": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "employeeCalculatedField",
      "rules": [
        "isDefault4"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate",
              "employeeExperience"
            ],
            "maxColumns": 2
          },
          "usedIn": [
            "isDefault4"
          ]
        }
      }
    },
    "isDefault6": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "editableTable": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "editableTable",
      "rules": [
        "isDefault6"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              {
                  "firstName": {
                  "maxWidth": "20%"
                  }
                },
              {
                  "lastName": {
                  "maxWidth": "20%"
                  }
                },
              {
                  "email": {
                  "maxWidth": "25%"
                  }
                },
              {
                  "phoneNumber": {
                  "maxWidth": "25%"
                  }
                }
            ]
          },
          "usedIn": [
            "isDefault6"
          ]
        },
        "layoutWithID": {
          "layoutType": "table",
          "type": "businessObjects",
          "label": "layoutWithID",
          "description": "",
          "layout": {
            "displayProperties": [
              "id"
            ]
          },
          "usedIn": []
        }
      }
    },
    "fieldTemplateEvent": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Field Template Event",
      "rules": [
        "isDefault6"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "nameVF",
              "email",
              "phoneNumber",
              "salary",
              "hireDate"
            ]
          },
          "usedIn": [
            "isDefault6"
          ]
        }
      },
      "fieldTemplateMap": {
        "nameVF": "tableFieldTemplate"
      }
    },
    "isDefault7": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "empDetailForm": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "empDetailForm",
      "rules": [
        "isDefault7"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "fullName",
              "email",
              "hireDate",
              "phoneNumber",
              "salary"
            ],
            "readonly": true
          }
        }
      }
    }
  },
  "templates": {
