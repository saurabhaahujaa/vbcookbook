  "imports": {
    "css": [
      "https://static.oracle.com/cdn/vb/vb-icon-font/1/vb-icon-font.css"
    ]
  },
  "eventListeners": {
    "nameLinkClick": {
      "chains": [
        {
          "chainId": "HyperlinkClickChain",
          "parameters": {
            "empId": "{{ $event.target.attributes['_empId'].value }}"
          }
        }
      ]
    }
  },
  "interface": {
    "events": {
      "empDetail": {
        "propagationBehavior": "container",
        "description": "Emits to page",
        "payloadType": {
          "empId": "any"
        }
      }
    }
  }
}