{
  "variables": {
    "employee": {
      "type": "object",
      "input": "fromCaller",
      "defaultValue": "[[ $page.variables.employee ]]"
    },
    "saveFailureResult": {
      "type": "businessObjectsServiceErrorResponseType"
    },
    "errorMessage": {
      "type": "string"
    }
  },
  "root": "markCreateStarted",
  "actions": {
    "markCreateStarted": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$page.variables.createEmployeeChainInProgress": {
          "source": true
        }
      },
      "outcomes": {
        "success": "validateEmployee"
      },
      "description": "Sets the progress variable to true",
      "label": "Mark Create in progress"
    },
    "validateEmployee": {
      "module": "vb/action/builtin/callChainAction",
      "parameters": {
        "id": "flow:validateFormChain",
        "params": {
          "validationGroupId": "employee-validation-group--1209804167-1"
        }
      },
      "outcomes": {
        "success": "isFormValid"
      },
      "label": "Validate",
      "description": "Validates Employee form"
    },
    "isFormValid": {
      "module": "vb/action/builtin/ifAction",
      "parameters": {
        "condition": "[[ $chain.results.validateEmployee === true ]]"
      },
      "outcomes": {
        "true": "saveEmployee",
        "false": "markCreateEnded"
      },
      "label": "Is Form valid",
      "description": "Tests if form passed validation"
    },
    "fireSuccessNotification": {
      "module": "vb/action/builtin/fireNotificationEventAction",
      "parameters": {
        "summary": "Employee saved",
        "message": " [[ 'Employee record successfully created with details: ' +JSON.stringify( $page.variables.employee) ]]",
        "type": "confirmation",
        "displayMode": "transient"
      },
      "outcomes": {
        "success": "callResetEmployeeChain"
      },
      "description": "Fires a notification event about successful save",
      "label": "Fire save success event"
    },
    "assignFailureResult": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$variables.saveFailureResult": {
          "source": "[[ $chain.results.saveEmployee ]]"
        }
      },
      "outcomes": {
        "success": "testFailureDetails"
      },
      "description": "Assigns REST call failure result to a local variable",
      "label": "Assign failure result"
    },
    "testFailureDetails": {
      "module": "vb/action/builtin/ifAction",
      "outcomes": {
        "true": "handleDetailedErrorMessage",
        "false": "handleDefaultErrorMessage"
      },
      "parameters": {
        "condition": "[[ $variables.saveFailureResult.body['o:errorDetails'][0] ]]"
      },
      "description": "Tests if the REST call failure output contains error detail message",
      "label": "Test failure details"
    },
    "handleDetailedErrorMessage": {
      "module": "vb/action/builtin/assignVariablesAction",
      "outcomes": {
        "success": "fireErrorNotification"
      },
      "parameters": {
        "$variables.errorMessage": {
          "source": "[[ $variables.saveFailureResult.body['o:errorDetails'][0].detail ]]"
        }
      },
      "description": "Extracts detail error message from the REST call failure result",
      "label": "Assign detailed error message"
    },
    "handleDefaultErrorMessage": {
      "module": "vb/action/builtin/assignVariablesAction",
      "outcomes": {
        "success": "fireErrorNotification"
      },
      "parameters": {
        "$variables.errorMessage": {
          "source": "[[ 'Could not create new Employee: status ' + $variables.saveFailureResult.status ]]"
        }
      },
      "description": "Builds default error message",
      "label": "Assign default error message"
    },
    "fireErrorNotification": {
      "module": "vb/action/builtin/fireNotificationEventAction",
      "parameters": {
        "summary": "Save failed",
        "message": "[[ $variables.errorMessage ]]",
        "type": "error",
        "displayMode": "persist"
      },
      "description": "Fires a notification event about failed save",
      "label": "Fire save failed event",
      "outcomes": {
        "success": "markCreateEnded"
      }
    },
    "callResetEmployeeChain": {
      "module": "vb/action/builtin/callChainAction",
      "parameters": {
        "id": "clearEmployeeChain"
      },
      "description": "Resets Employee form state to its default state",
      "label": "Reset Employee form state",
      "outcomes": {
        "success": "markCreateEnded"
      }
    },
    "saveEmployee": {
      "module": "vb/action/builtin/restAction",
      "parameters": {
        "endpoint": "businessObjects/create_Employee",
        "body": "[[ $variables.employee ]]"
      },
      "description": "Call REST creating new Employee record",
      "label": "Save Employee record",
      "outcomes": {
        "success": "fireSuccessNotification",
        "failure": "assignFailureResult"
      }
    },
    "markCreateEnded": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$page.variables.createEmployeeChainInProgress": {
          "source": false
        }
      },
      "description": "Sets the progress variable to false",
      "label": "Mark Create done"
    }
  },
  "description": "Saves changes and creates new Employee record."
}