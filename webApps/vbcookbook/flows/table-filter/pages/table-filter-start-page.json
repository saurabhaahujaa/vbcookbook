{
  "title": "Filtering Recipe",
  "description": "",
  "variables": {
    "departmentListSDP": {
      "type": "vb/ServiceDataProvider",
      "defaultValue": {
        "endpoint": "businessObjects/getall_Department",
        "keyAttributes": "id",
        "itemsPath": "items",
        "responseType": "getallDepartmentResponse",
        "filterCriterion": {
          "op": "$or",
          "criteria": [
            {
              "op": "$co",
              "attribute": "id",
              "value": "{{ $variables.filterText }}"
            },
            {
              "op": "$co",
              "attribute": "departmentName",
              "value": "{{ $variables.filterText }}"
            },
            {
              "op": "$co",
              "attribute": "departmentManager.lastName",
              "value": "{{ $variables.filterText }}"
            },
            {
              "op": "$co",
              "attribute": "departmentManager.email",
              "value": "{{ $variables.filterText }}"
            }
          ]
        }
      }
    },
    "filterText": {
      "type": "string"
    }
  },
  "metadata": {},
  "types": {
    "@decorators.getallDepartmentResponse": {
      "endpoint": "getall_Department",
      "service": "businessObjects",
      "path": "response"
    },
    "getallDepartmentResponse": {
      "items": [
        {
          "departmentManager": {
            "items": [
              {
                "email": "string",
                "lastName": "string"
              }
            ]
          },
          "departmentName": "string",
          "id": "number",
          "manager": "number"
        }
      ]
    }
  },
  "chains": {},
  "eventListeners": {},
  "imports": {
    "components": {
      "oj-highlight-text": {
        "path": "ojs/ojhighlighttext"
      },
      "oj-label": {
        "path": "ojs/ojlabel"
      },
      "oj-table": {
        "path": "ojs/ojtable"
      },
      "oj-sample-input-text-typeahead": {
        "path": "oj-sample/input-text-typeahead/loader"
      }
    }
  }
}